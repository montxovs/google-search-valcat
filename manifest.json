{
    "manifest_version": 2,
    "name": "Busques a Google en valencià/català",
    "short_name": "Google (val/cat)",
    "description": "Pàgina principal de Google i busques en valencià/català amb les configuracions personalitzades desactivades.",
    "version": "1.0.0",
    "icons": {
        "48": "icon.png",
        "96": "icon@2x.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "google-english-search@neighborhood-dog",
            "strict_min_version": "64.0"
        }
    },
    "default_locale": "ca",
    "author": "montxovs",
    "developer": {
        "name": "montxovs",
        "url": "https://github.com/neighborhood-dog/google-search-valcat"
    },
    "omnibox": {
        "keyword": "google-ca"
    },
    "chrome_settings_overrides": {
        "homepage": "https://www.google.com/webhp?hl=ca_ES&pws=0",
        "search_provider": {
            "name": "Busques a Google en valencià/català",
            "search_url": "https://www.google.com/webhp?hl=ca_ES&pws=0&client=firefox&q={searchTerms}",
            "is_default": true,
            "encodig": "UTF-8",
            "favicon_url": "/icon.ico",
            "image_url": "https://www.google.com/search?hl=ca_ES&pws=0&tbm=isch&client=firefox&q={searchTerms}",
            "keyword": "@google-ca",
            "suggest_url": "https://suggestqueries.google.com/complete/search?client=firefox&pws=0&hl=ca&q={searchTerms}"
        }
    }
}
