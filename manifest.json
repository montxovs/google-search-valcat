{
    "manifest_version": 2,
    "name": "Google Search in English, Always",
    "short_name": "Google (English)",
    "description": "Google homepage and search in English with personalized web search off.",
    "version": "1.0.3",
    "icons": {
        "48": "icon.png",
        "96": "icon@2x.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "google-english-search@neighborhood-dog",
            "strict_min_version": "64.0"
        }
    },
    "default_locale": "en",
    "author": "neighborhood-dog",
    "developer": {
        "name": "neighborhood-dog",
        "url": "https://github.com/neighborhood-dog/google-search-in-english-always"
    },
    "omnibox": {
        "keyword": "google-en"
    },
    "chrome_settings_overrides": {
        "homepage": "https://www.google.com/webhp?gl=us&hl=en_US&pws=0",
        "search_provider": {
            "name": "Google Search in English, Always",
            "search_url": "https://www.google.com/search?gl=us&hl=en_US&pws=0&client=firefox&q={searchTerms}",
            "is_default": true,
            "encodig": "UTF-8",
            "favicon_url": "/icon.ico",
            "image_url": "https://www.google.com/search?gl=us&hl=en_US&pws=0&tbm=isch&client=firefox&q={searchTerms}",
            "keyword": "@google-en",
            "suggest_url": "https://suggestqueries.google.com/complete/search?client=firefox&gl=us&pws=0&hl=en&q={searchTerms}"
        }
    }
}
